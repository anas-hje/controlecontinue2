<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="stylebutton" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_text</item>
        <item name="android:padding">@dimen/padding_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_taille</item>
        <item name="android:textColor">@color/btn_color</item>
        <item name="android:textStyle">bold</item>
        <item name="borderWidth">@dimen/border_btn</item>
    </style>

    <style name="styletextview">
        <item name="android:background">@color/fond_text</item>
        <item name="android:layout_margin">@dimen/margin_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/padding_text</item>
        <item name="android:textSize">@dimen/text_taille</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="buttonavtivities">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_text</item>
        <item name="android:padding">@dimen/padding_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_taille</item>
        <item name="android:textColor">@color/colortextbuttonactivities</item>
        <item name="android:background">@color/colorACtivitiesButtons</item>
        <item name="android:textStyle">bold</item>
        <item name="borderWidth">@dimen/border_btn</item>
    </style>




</resources>